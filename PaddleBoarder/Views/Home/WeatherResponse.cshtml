@model PaddleBoarder.Models.ViewModel
   
@{
    ViewBag.Title = "WeatherResponse";
}

        <div class="jumbotron">
            <h1>Paddleboard Everyday</h1>
                 <p>Somedays are better than others for paddleboarding
                     <br>so let our weather checker decide for you!</p>
        </div>
        
        <h2>Should I Paddleboard today?</h2>
        <form action="GetWeather" method="get" id="ToGoOrNotTo">
            <input type="text" name="city">
            <button>Get Answer</button>          

            <label>Current Forecast: </label>@ViewBag.Desc
        </form>
         @if (Model!= null)
         {

            if (Model.IsRain)
             {
                <div class="raincard">
                    <div class="container">
                        <p>Temperature: @ViewBag.Temp</p>
                        <p>Maybe give today a miss</p>
                    </div>
                </div>

             }
             else if (Model.IsSun)
             {
                 <div class="suncard">
                     <div class="container">
                         <p>Temperature: @ViewBag.Temp</p>
                         <p>you should go</p>
                     </div>
                 </div>
             }
             else if (Model.IsCloud)
                {
                    <div class="cloudcard">
                        <div class="container">
                            <p></p>
                        </div>
                    </div>
             }
             else if (Model.IsThunder)
             {
                 <div class="thundercard">
                     <div class="container">
                         <p>THUNDER</p>

                     </div>
                 </div>
             }
         }



















